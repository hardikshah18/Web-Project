<div class="row">
  {{#each airbnbs}}
  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
      <!-- Image -->
      <a href="/api/AirBnBs/{{_id}}">
        <img
          src="{{images.picture_url}}"
          class="card-img-top"
          alt="AirBnB Image"
          onerror="this.src='https://via.placeholder.com/300x200';"
        />
      </a>

      <!-- Card Body -->
      <div class="card-body">
        <!-- Price -->
        <h5 class="card-title text-dark">$ {{price}} / night</h5>

        <!-- Rating -->
        {{#if review_score_value}}
        <p class="card-text text-dark">
          <strong>Rating:</strong> {{review_score_value}}/10
        </p>
        {{else}}
        <p class="card-text text-muted">No reviews yet</p>
        {{/if}}

        <!-- Address -->
        <p class="card-text text-dark">
          <strong>Address:</strong> {{#if address.street}}{{address.street}}{{else}}N/A{{/if}}
        </p>

        <!-- Minimum Nights -->
        <p class="card-text text-dark">
          <strong>Minimum Nights:</strong> {{minimum_nights}}
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!-- Pagination Controls -->
<div class="d-flex justify-content-between">
  {{#if (gt currentPage 1)}}
  <a href="/api/AirBnBs?page={{subtract currentPage 1}}&perPage={{perPage}}" class="btn btn-primary">Previous</a>
  {{/if}}

  {{#if (lt currentPage totalPages)}}
  <a href="/api/AirBnBs?page={{add currentPage 1}}&perPage={{perPage}}" class="btn btn-primary">Next</a>
  {{/if}}
</div>
